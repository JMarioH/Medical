<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_Listegreso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_tipoEgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/tv_fecha"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_comprobante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/tv_tipoEgreso"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/tv_comprobante"
            android:layout_weight="1" />


    </LinearLayout>
</android.support.v7.widget.CardView>